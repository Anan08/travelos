generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Packages {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  desc String
  prices Int
}

model Hotels {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  desc String
  image String
  prices Int
}
model HotelTransaction {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  userId String
  hotelId String
  image String
  amount Int
  prices Int
  status String
  code String
}

model PackageTransaction {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId String 
  packageId String 
  amount Int
  prices Int
  status String
  code String
}
